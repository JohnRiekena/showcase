<div class="row">
  <div class="col-sm-6">
    <h1>Books</h1>
  </div>

  <div class="col-sm-6 text-end">
    <%= link_to new_book_path, class: 'btn btn-primary' do %>
      Add New Book
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>


      <th>Title</th>
      <th>Page Count</th>
      <th>Genre</th>
      <th>Has Book Cover?</th>

      <th></th>

    </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <%= content_tag :tr, id: dom_id(book), class: dom_class(book) do %>


        <td><%= book.title %></td>
        <td><%= book.page_count %></td>
        <td><%= book.genre %></td>
        <td><%= book.image.present? %></td>


        <td><%= link_to 'Show', book %></td>

      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
