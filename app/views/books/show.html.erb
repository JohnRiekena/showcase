<div class="page-header">
  <%= link_to books_path, class: 'btn btn-default' do %>
    All Books
  <% end %>
  <%= link_to edit_book_path(@book), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show book</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @book.title %></dd>
  <dt>Page Count:</dt>
  <dd><%= @book.page_count %></dd>
  <dt>Genre:</dt>
  <dd><%= @book.genre %></dd>
  <% if @book.image.present? %>
    <dt>Book Cover:</dt>
    <dd><%= image_tag url_for(@book.image) if @book.image.present? %></dd>
  <% end %>
</dl>
